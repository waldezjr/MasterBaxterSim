<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="human_right_arm">

 <xacro:arg name="l1" default="0.5" />
 <xacro:arg name="l2" default="0.25" />
 <xacro:arg name="l3" default="0.125" />

 	<xacro:property name="l1" value="$(arg l1)" />
 	<xacro:property name="l2" value="$(arg l2)" />
 	<xacro:property name="l3" value="$(arg l3)" />

 	<property name="M_PI" value="3.141592653589793"/>

	<link name="base_link"/>
	<link name="link0"/>
	<link name="link1"/>
	<link name="link2"/>
	<link name="link3"/>
	<link name="link4"/>
	<link name="link5"/>
	<link name="link6"/>
	<link name="EEF"/>
<!-- Links are equivalent to DH standard convention -->
<!-- 
i    theta	d    a    alpha    offset
1	0	0	0	pi/2	pi/2
2	0	0	0	pi/2	pi/2
3	0	0	l_1	pi/2	pi
4	0	0	0	-pi/2	pi/2
5	0	-l_2	0	pi/2	0
6	0	0	0	-pi/2	-pi/2
7	0	0	0	0	0 
-->
	<!-- Arm relaxed, palm (z_6) is facing forward  -->


	<joint name="q1" type="revolute">
		<origin xyz="0 0 0" rpy="0 0 0"/>
		<limit lower="${-M_PI}" upper="${M_PI}" effort="1000.0" velocity="3"/>
		<parent link="base_link"/>
		<child link="link0"/>
		<axis xyz="0 0 1"/>
	</joint>


	<joint name="q2" type="revolute">
		<origin xyz="0 0 0" rpy="${M_PI/2} 0 ${M_PI/2}"/>
		<limit lower="${-M_PI}" upper="${M_PI}" effort="1000.0" velocity="3"/>
		<parent link="link0"/>
		<child link="link1"/>
		<axis xyz="0 0 1"/>
	</joint>

	<joint name="q3" type="revolute">
		<origin xyz="0 0 0" rpy="${M_PI/2} 0 ${M_PI/2}"/>
		<limit lower="${-M_PI}" upper="${M_PI}" effort="1000.0" velocity="3"/>
		<parent link="link1"/>
		<child link="link2"/>
		<axis xyz="0 0 1"/>
	</joint>

	<joint name="q4" type="revolute">
		<origin xyz="${-l1} 0 0" rpy="${M_PI/2} 0 ${M_PI}"/>
		<limit lower="${-M_PI}" upper="${M_PI}" effort="1000.0" velocity="3"/>
		<parent link="link2"/>
		<child link="link3"/>
		<axis xyz="0 0 1"/>
	</joint>

	<joint name="q5" type="revolute">
		<origin xyz="0 0 0" rpy="${-M_PI/2} 0 ${M_PI/2}"/>
		<limit lower="${-M_PI}" upper="${M_PI}" effort="1000.0" velocity="3"/>
		<parent link="link3"/>
		<child link="link4"/>
		<axis xyz="0 0 1"/>
	</joint>

	<joint name="q6" type="revolute">
		<origin xyz="0 0 ${-l2}" rpy="${M_PI/2} 0 0"/>
		<limit lower="${-M_PI}" upper="${M_PI}" effort="1000.0" velocity="3"/>
		<parent link="link4"/>
		<child link="link5"/>
		<axis xyz="0 0 1"/>
	</joint>

	<joint name="q7" type="revolute">
		<origin xyz="0 0 0" rpy="${-M_PI/2} 0 ${-M_PI/2}"/>
		<limit lower="${-M_PI}" upper="${M_PI}" effort="1000.0" velocity="3"/>
		<parent link="link5"/>
		<child link="link6"/>
		<axis xyz="0 0 1"/>
	</joint>

	<joint name="EEF" type="fixed">
		<origin xyz="${l3} 0 0" rpy="0 0 0"/>
		<parent link="link6"/>
		<child link="EEF"/>
		<axis xyz="0 0 1"/>
	</joint>


</robot>